<%if params[:title]%>
  <h1>Search results for <%= @movies.first.title %> </h1>
<% else %>
  <h1>Top Rated Films:</h1>
<% end %>

<%= button_to "Discover Page", "/users/#{@user.id}/discover", method: :get%>

<% @movies.each do |movie| %>
<ul>
  <p><%= movie.title %>, Rating:<%= movie.vote_average %></p>
</ul>
<% end %>


